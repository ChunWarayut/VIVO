@model IEnumerable<VIVO.Models.Product>
@{  
                ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>VIVO SHOP </h1>
    <p class="lead">
        กล้าที่จะมุ่งสู่ความสมบูรณ์แบบที่แท้จริง
        พร้อมสร้างความประหลาดใจตลอดเวลา
    </p> 
</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card" style="width:20rem;margin:20px 0 24px 0">
                <img src="~/image/@Html.DisplayFor(modelItem => item.Pro_Picture)"
                     alt="company logo"
                     height="225px"
                     asp-append-version="true" />
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Pro_Name)</h4>
                    <p class="card-text">ราคา @Html.DisplayFor(modelItem => item.Pro_Price, new { @class = "form-control", Type = "number" }) บาท </p>
                </div>
            </div>
        </div>
    }
</div>