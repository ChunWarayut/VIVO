@model IEnumerable<VIVO.Models.Bank>

@{
    ViewBag.Title = "Index";
}

<h2>ระบบจัดการข้อมูล</h2>

<p>
    @Html.ActionLink("เพิ่มข้อมูล", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bank_User)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bank_User)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Bank_Number }, new { @class = "fas fa-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.Bank_Number }, new { @class = "fas fa-file" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Bank_Number }, new { @class = "fas fa-trash-alt" })
        </td>
    </tr>
}

</table>
